<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Marketplaes02.View.ViewUser_Registration"  Background="Azure"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="Регистрация">
    <VerticalStackLayout VerticalOptions="StartAndExpand"  Padding="15" Margin="15">
        <Label Text="Введите данные для регистрации" Style="{DynamicResource LabZapol}"/>
        <Label Text="Введите свое имя"/>
        <Entry x:Name="entryName" Placeholder="Имя"/>
        <Label Text="Придумайте логин"/>
        <Entry x:Name="entryLog" Placeholder="Логин"/>
        <Label Text="Введите номер телефона в формате +79000000000" />
        <Entry x:Name="entryNumber" Keyboard="Telephone" Placeholder="Номер телефона"/>
        <Label Text="Придумайте пароль" />
        <Entry IsPassword="True" x:Name="entryPas" Placeholder="Пароль"/>
        <Label Text="Повторите пароль"/>
        <Entry IsPassword="True" x:Name="entryPasCopy" Placeholder="Повторите пароль"/>
        <Button x:Name="BtnRegistr" Text="Зарегистрироваться" Style="{DynamicResource BtVoiti}" Clicked="BtnRegister"/>
    </VerticalStackLayout>
</ContentPage>