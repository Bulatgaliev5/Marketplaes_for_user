<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Marketplaes02.View.ViewUser_autorizasiya" Background="Azure"
             Title="Авторизация">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Margin="20">
                <Label Text="Добро пожаловать" Style="{DynamicResource LabDobr}"/>
                <Label Text="Заполните данные для входа" Style="{DynamicResource LabZapol}"/>
                <Entry   x:Name="entryLogin" Style="{DynamicResource EntryLogin}">

                </Entry>
                <Entry  x:Name="entryPass" IsPassword="True" Style="{DynamicResource EntryPass}"/>

                <Button Text="Войти в аккаунт" Style="{DynamicResource BtVoiti}" Clicked="Voiti"/>
            </StackLayout>
            <StackLayout Margin="20">
                <Label HorizontalOptions="Start" Margin="5" Text="Нет аккаунта?" Style="{DynamicResource LabDobr}"/>
                <Label HorizontalOptions="Start" Margin="5"  Text="Добро пожаловать к нам" Style="{DynamicResource LabZapol}"/>
                <Button Margin="0,10,0,0" Text="Регистрация" Style="{DynamicResource BtVoiti}" Clicked="Registration"/>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>