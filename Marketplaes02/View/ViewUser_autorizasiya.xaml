<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Marketplaes02.View.ViewUser_autorizasiya"
             Title="ViewUser_autorizasiya">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Margin="20">
                <Label Text="Добро пожаловать" Style="{DynamicResource LabDobr}"/>
                <Label Text="Заполните данные для входа" Style="{DynamicResource LabZapol}"/>
                <Entry  x:FieldModifier="public" x:Name="entryLogin" Style="{DynamicResource EntryLogin}">

                </Entry>
                <Entry x:FieldModifier="public" x:Name="entryPass" IsPassword="True" Style="{DynamicResource EntryPass}"/>

                <Button Text="Войти в аккаунт" Style="{DynamicResource BtVoiti}" Clicked="Voiti"/>
            </StackLayout>
            <!--<StackLayout>
                <Label Text="Нет аккаунта?"/>
                <Label Text="Добро пожаловать к нам"/>
                <Button Text="Регистрация" Clicked="Registration"/>
            </StackLayout>-->

        </StackLayout>
    </ContentPage.Content>
</ContentPage>